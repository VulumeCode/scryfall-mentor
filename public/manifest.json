{
  "manifest_version": 2,
  "name": "Scryfall Mentor",
  "version": "1.0",
  "description": "Scryfall query builder.",
  "icons": {
    "32": "scryfall.svg"
  },
  "sidebar_action": {
    "default_icon": "scryfall.svg",
    "default_title": "Scryfall Mentor",
    "default_panel": "index.html"
  },
  "permissions": [
    "history",
    "tabs",
    "storage",
    "webNavigation"
  ]
}